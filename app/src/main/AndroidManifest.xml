<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bignerdranch.android.exercisebuddy">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginOrRegisterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProfileImageActivity"/>
        <activity android:name=".ExerciseSelectionActivity"/>
        <activity android:name=".UserGenderSelectionActivity"/>
        <activity android:name=".DateOfBirthSelectionActivity"/>
        <activity android:name=".UserExperienceLevelSelectionActivity"/>
        <activity android:name=".GenderPreferenceSelectionActivity"/>
        <activity android:name=".AgeRangePreferenceSelectionActivity"/>
        <activity android:name=".ExperienceLevelPreferenceSelectionActivity"/>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".RegisterActivity"/>
        <activity android:name=".UserGridActivity"/>
        <activity android:name=".UserProfileActivity"/>
        <activity android:name=".UpdateUserPreferencesActivity"/>
        <activity android:name=".UpdateUserProfileActivity"/>
    </application>

</manifest>